<UserControl
    x:Class="CustomComponents.MasterDetail.MasterDetailControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CustomComponents.MasterDetail"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid>
        <SplitView x:Name="MasterDetailView"
                   IsPaneOpen="True" DisplayMode="Inline" 
                   PanePlacement="{x:Bind ViewModel.PanePlacement}"
                   OpenPaneLength="{x:Bind ViewModel.MasterWidth}">
            <SplitView.Pane>
                <Grid></Grid>
            </SplitView.Pane>
            <Border x:Name="Detail" BorderThickness="0" Background="Black">
                
            </Border>
        </SplitView>
    </Grid>
</UserControl>
